    <TextView
        android:id="@+id/synopsis_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorYe"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="60dp"
        android:paddingBottom="8dp"
        android:text="Синопсис"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/synopsis_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..." />


    <TextView
        android:id="@+id/bio_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorYe"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="60dp"
        android:paddingBottom="8dp"
        android:text="Био"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/bio_movie"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..." />

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark">

    </View>

    <ListView

        android:layout_marginTop="8dp"
        android:id="@+id/list_single_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="3dp"
        android:drawSelectorOnTop="true"
        tools:context="com.example.testingserver.MainActivity"></ListView>
</LinearLayout>
